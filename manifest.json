{
  "manifest_version": 3,
  "name": "LinkedIn Feed Cleaner",
  "version": "1.0",
  "description": "Hides uninformative, bragging, or useless posts from LinkedIn feed using AI analysis",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "LinkedIn Feed Cleaner Settings"
  }
}